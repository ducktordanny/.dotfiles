#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$(find ~/Developer ~/work ~/personal ~/.config -mindepth 1 -maxdepth 1 -type d \
    | fzf --bind 'change:first' --ansi --preview '
      git_branch=$(git -C {} branch --show 2>/dev/null)
      if [ -n "$git_branch" ]; then
        printf "\033[1;36mðŸŒ³ Branch:\033[0m \033[1;32m%s\033[0m\n" "$git_branch"
        echo "\n---\n\nðŸ“‹ Status:\n"
        git_status=$(git -c color.status=always -C {} status -s)
        [ -n "$git_status" ] && echo $git_status || echo "âœ… Clean, nothing to see here..." 
        echo "\n---\n\nðŸªµ Log:\n"
        git -C {} log --graph --oneline --max-count 25 --color=always
        echo "\n... Top 25 shown"
      else
        echo "---\n\nðŸ˜§ No git repo here, nothing to show... ðŸ˜­\n\n---"
      fi
    '
  )
fi

if [[ -z $selected ]]; then
  exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s $selected_name -c $selected
  exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
  tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
